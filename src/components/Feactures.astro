---
import feactures from '../json/feacture.json'
---

<h1 class='text-center font-bold text-5xl mt-10'>Feactures</h1>
<div class='grid md:grid-cols-3 gap-4 p-4'>
  {
    feactures.map((feacture, index) => (
      <div class='flex flex-col items-center justify-center p-10 bg-slate-800 '>
        <h2 class='text-center font-bold text-2xl my-4 mt-10'>{feacture.title}</h2>
        <p class=''>{feacture.description}</p>
      </div>
    ))
  }
</div>
